{
  "name": "ibm-nodejs-cloudant-app",
  "version": "1.0.0",
  "description": "node.js + express + cloudant",
  "config": {
    "entrypoint": "server/server.js"
  },
  "scripts": {
    "dev": "nodemon server/server.js",
    "start": "node server/server.js",
    "check-coverage": "nyc report --check-coverage --lines 100",
    "lint": "eslint --ignore-path .gitignore --ignore-pattern \"react-build/\" .",
    "fix": "eslint --ignore-path .gitignore --ignore-pattern \"react-build/\" . --fix",
    "test": "nyc mocha test --recursive --exit"
  },
  "dependencies": {
    "@cloudant/cloudant": "^4.3.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.10",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.9.2",
    "helmet": "^4.3.1",
    "ibm-cloud-env": "^0.2.7",
    "ibmcloud-appid": "^6.1.1",
    "log4js": "^6.3.0",
    "passport": "^0.4.1",
    "pug": "^3.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.17.0",
    "eslint-config-strongloop": "^2.1.0",
    "husky": "^4.3.6",
    "mocha": "^8.2.1",
    "mock-require": "^3.0.3",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "sinon": "^9.2.2",
    "sinon-chai": "^3.5.0",
    "supertest": "^6.0.1"
  }
}
